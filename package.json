{
  "name": "serverus",
  "version": "1.0.0",
  "main": "backend/index.ts",
  "type": "node",
  "license": "MIT",
  "scripts": {
    "postinstall": "cd frontend && yarn install",
    "build": "yarn run build:be & yarn run build:fe",
    "build:be": "tsc --build tsconfig.json",
    "build:fe": "cd frontend && yarn build",
    "postbuild": "cp -r package.json yarn.lock frontend/ build",
    "prettier": "prettier --write **/*.{js,ts,html,scss}",
    "dev": "ts-node backend/index.ts"
  },
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "optionalDependencies": {
    "prettier": "^2.0.5"
  }
}
